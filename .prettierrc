{
  "useTabs": false,
  "bracketSameLine": true,
  "bracketSpacing": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "printWidth": 120,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "*.component.html",
      "options": {
        "parser": "angular"
      }
    },
    {
      "files": "*.mo",
      "options": {
        "bracketSpacing": true
      }
    }
  ],
  "plugins": ["prettier-plugin-motoko"]
}
